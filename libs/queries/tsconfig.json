{
  "compilerOptions": {
    "target": "es2019",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "composite": true,
    "types": ["jest"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
